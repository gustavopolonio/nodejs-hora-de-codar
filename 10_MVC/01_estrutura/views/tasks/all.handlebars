<h1>Show all tasks</h1>
<ul>
  {{#each tasks}}
    <li>
      {{#if this.done}}
        <a href="/" class="done">{{this.title}}</a>
      {{else}}
        <a href="/">{{this.title}}</a>
      {{/if}}
      <div class="actions">
        <form action="/tasks/updateStatus" method="POST">
          <input type="hidden" name="id" value="{{this.id}}" />
          <input type="hidden" name="status" value="{{this.done}}" />
          <button type="submit">
            <i class="bi bi-check2"></i>
          </button>
        </form>

        <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

        <form action="/tasks/delete" method="POST">
          <input type="hidden" name="id" value="{{this.id}}" />
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>