<h1>Show all tasks</h1>
<ul>
  {{#each tasks}}
    <li>
      <a href="/">{{this.title}}</a>
      <div class="actions">
        <a href="/"><i class="bi bi-check2"></i></a>
        <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
        <form action="/tasks/delete" method="POST">
          <input type="hidden" name="id" value="{{this.id}}" />
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>