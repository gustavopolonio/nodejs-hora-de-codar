<div class="dashboard">
  <div class="title-container">
    <h2>Dashboard</h2>
    <a href="/thoughts/create" class="btn">Create thought</a>
  </div>
  <h3>Your thoughts</h3>
  <ul>
    {{#each thoughts}}
      <li>
        <span class="label">{{this.title}}</span>
        <span class="actions">
          <a href="/" class="btn">Edit</a>
          <form action="/thoughts/remove" method="POST">
            <input type="hidden" name="id" value="{{this.id}}" />
            <input type="submit" value="Delete" class="btn" />
          </form>
        </span>
      </li>
    {{/each}}
    {{#unless haveThoughts}}
      <p>You don't have any thoughts! Write your first one <a href="/thoughts/create">here!</a></p>
    {{/unless}}
  </ul>
</div>