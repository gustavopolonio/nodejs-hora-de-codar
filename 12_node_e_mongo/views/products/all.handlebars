<h1>All products</h1>
<div class="products">
  {{#each products}}
    <div class="product">
      <h3>{{this.name}}</h3>
      <img src="{{this.imageUrl}}" alt="{{this.name}}">
      <p>R$ {{this.price}}</p>
      <div class="actions">
        <a href="/products/{{this._id}}">Ver produto</a>
      </div>
    </div>
  {{/each}}
</div>